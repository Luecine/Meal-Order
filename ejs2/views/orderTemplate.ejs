<!DOCTYPE html>
<!--참고: https://www.w3schools.com/w3css/tryit.asp?filename=tryw3css_templates_pizza-->
<html>
  <meta charset="EUC-KR" />
  <title>OrderTemplate</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Raleway:wght@500&display=swap"
    rel="stylesheet"
  />
  <style>
    body,
    html {
      height: 100%;
    }
    body,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Raleway", sans-serif;
    }
    .menu {
      display: none;
    }
    .bgimg {
      background-repeat: no-repeat;
      background-size: cover;
      background-image: url("/w3images/pizza.jpg");
      min-height: 90%;
    }
    #pButton {
      margin-left: auto;
      margin-right: auto;
    }
  </style>

  <body>
    <!-- Navbar (sit on top) 
    <div class="w3-top w3-hide-small">
      <div
        class="w3-bar-item w3-xlarge w3-black w3-opacity w3-hover-opacity-off w3-mobile"
        id="myNavbar"
      >
        <a href="#" class="w3-bar-item w3-button">HOME</a>
        <a href="#menu" class="w3-bar-item w3-button">MENU</a>
        <a href="#about" class="w3-bar-item w3-button">ABOUT</a>
        <a href="#myMap" class="w3-bar-item w3-button">CONTACT</a>
      </div>
    </div>
-->
    <!-- Header with image -->
    <header class="w3-display-topmiddle w3-margin-top" id="home">
      <div class="w3-display-bottomleft w3-padding">
        <!--bottom right-->
      </div>
      <div class="w3-display-middle w3-center">
        <!--center-->
        <p>
          <a href="#menu" class="w3-button w3-xxlarge w3-black">Profile</a>
        </p>
      </div>
    </header>

<form action="/purchase" method="get">
    <!-- Menu Container -->
    <div class="w3-container w3-black w3-padding-64 w3-xxlarge" id="menu">
      <div class="w3-content">
        <h1 class="w3-center w3-jumbo" style="margin-bottom: 64px">THE MENU</h1>
        <div class="w3-row w3-center w3-border w3-border-dark-grey">
          <div class="w3-col w3-padding-large w3-hover-red">Menu</div>
        </div>
        

        <div id="Pizza" class="w3-container w3-padding-32 w3-white">
          <% for (var i = 0; i < length; i++) { %>
          <h1>
            <b><%= name[i] %></b>
            <span class="w3-right w3-tag w3-dark-grey w3-round"
              ><%= price[i] %></span
            >
            <input type = "text", name = "index"/>
          </h1>
          <hr />
          <% } %>
        </div>
      </div>
    </div>

    <!-- About Container -->
    <div
      class="w3-container w3-padding-64 w3-red w3-grayscale w3-xlarge"
      id="about"
    >
      <div class="w3-content">
          <input
            type="submit"
            class="w3-button w3-xxlarge w3-display-middle"
            value="Proceed"
          />
        </form>
      </div>
    </div>
  </body>
</html>
