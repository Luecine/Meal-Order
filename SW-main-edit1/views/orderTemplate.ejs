<!DOCTYPE html>
<!--참고: https://www.w3schools.com/w3css/tryit.asp?filename=tryw3css_templates_pizza-->
<html>
  <meta charset="EUC-KR" />
  <title>OrderTemplate</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Raleway:wght@500&display=swap"
    rel="stylesheet"
  />
  <style>
    body,
    html {
      height: 100%;
    }
    body,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Raleway", sans-serif;
      color : white;
    }
    .menu {
      display: none;
    }
    .bgimg {
      background-repeat: no-repeat;
      background-size: cover;
      background-image: url("/w3images/pizza.jpg");
      min-height: 90%;
    }
    #pButton {
      margin-left: auto;
      margin-right: auto;
    }
    #menubox{
      background-color :#4CAF50;
    }
       #titlebox{
      background-color :white;
    }
    #textstuff{
     color: black;
    }
     #about{
     width: 50%;
    }
  </style>

  <body>

<form action="/purchase" method="get">
    <!-- Menu Container -->
    <div class="w3-container w3-white w3-padding-64 w3-xxlarge" id="menu">
      <div class="w3-content" id = "titlebox" >
        <h1 class="w3-center w3-jumbo" style="margin-bottom: 64px" id = textstuff>Menu</h1>
        <div class="w3-row w3-center w3-bottombar w3-border-white">
       
        </div>
        

        <div class="w3-container w3-padding-32 " id = "menubox">
          <% for (var i = 0; i < length; i++) { %>
          <h1>
            <b><%= name[i] %></b>
            <span class="w3-right w3-tag w3-dark-grey w3-round"
              ><%= price[i] %></span
            >
            <div class = "w3-middle">
            <input type = "text", name = "index", value = "0"/>
            </div>
          </h1>
          <hr />
          <% } %>
        </div>


            <div
      class="w3-card w3-padding-64 w3-green w3-grayscale w3-xlarge w3-margin-top "
    > 
     
          <input
            type="submit"
            class="w3-button w3-xxlarge w3-display-middle"
            value="Proceed"
          />
        </form>
  
    </div>
      </div>
    </div>

    <!-- About Container -->
   

   
  </body>
</html>
